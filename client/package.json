    "@uswds/uswds": "3.13.0",
    "highcharts": "12.2.0",
    "highcharts-react-official": "3.2.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-redux": "9.2.0",
    "react-select": "5.10.1",
    "redux": "5.0.1",
    "redux-thunk": "3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,html}": "prettier --write"
