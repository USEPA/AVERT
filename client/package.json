    "@types/react-dom": "19.1.5",
    "@types/stats-lite": "2.2.2",
    "@vitejs/plugin-react-swc": "3.10.1",
    "clsx": "2.1.1",
    "cypress": "14.4.0",
    "eslint": "9.28.0",
    "eslint-plugin-cypress": "5.1.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
